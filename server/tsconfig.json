{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../dist/server",
    "mapRoot": "../dist/server",
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6"
  },
  "include": [
    "modules/**/*",
    "app.module.ts",
    "main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}